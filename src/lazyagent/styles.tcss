Screen {
    layout: grid;
    grid-size: 2 2;
    grid-columns: 30 1fr;
    grid-rows: 1fr 3;
}

TreePanel {
    row-span: 2;
    border: solid $primary;
}

OutputPanel {
    border: solid $primary;
}

PromptInput {
    height: 3;
    border: solid $primary;
}

PromptInput.plan-mode {
    border: solid $warning;
}
